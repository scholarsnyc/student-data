<div class="row">
  <div class="span12">
  <h3>Search for Students by Subject and Cohort</h3>
  <form action="/birdseye" method="get" accept-charset="utf-8">
  	<select name="subject" id="subject"  onchange="">
  		<% SUBJECTS.each do |subject| %>
  		<option value="<%= subject %>"><%= subject %></option>
  		<% end %>
  	</select>
  	<select name="grade" id="grade" onchange="">
  		<% GRADES.each do |grade| %>
  		<option value="<%= grade %>"><%= grade %></option>
  		<% end %>
  	</select>
  	<select name="cohort" id="cohort" onchange="">
  		<option>Cohort</option>
  		<option value="A">A</option>
  		<option value="B">B</option>
  		<option value="C">C</option>
  	</select>
  	<input type="submit" value="Continue &rarr;" class="btn">
  </form>
  </div>
</div>
<div class="row">
  <div class="span6">
    <h3>Search for Courses by Teacher</h3>
    <form id="teacher-selector">
      <select name="teacher" id="select-teacher">
        <% Course.teachers.each do |t| %>
          <option value="<%= t %>"><%= t %></option>
        <% end %>
      </select>
      <input type="submit" value="Continue &rarr;" class="btn">
    </form>
  </div>
  <div class="span6">
    <h3>Search for Courses by Subject</h3>
    <form id="subject-selector">
      <select name="teacher" id="select-subject">
        <% Course.subjects.each do |t| %>
          <option value="<%= t %>"><%= t %></option>
        <% end %>
      </select>
      <input type="submit" value="Continue &rarr;" class="btn">
    </form>
  </div>
</div>
<div class="row">
  <div class="span4">
    <h3>Download Data as CSV <%= erb :_beta %></h3>
    <ul>
      <li><a href="/students.csv">All Students</a></li>
      <li><a href="/ineligible-students.csv">All Ineligible Students</a></li>
      <li><a href="/courses.csv">All Courses</a></li>
      <li><a href="/records.csv">All Records</a></li>
      <li><a href="/exams.csv">All Exam Scores</a></li>
    </ul>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $('document').ready(function(){
    $('#teacher-selector').submit(function(event){
      event.preventDefault();
      var teacher = "/courses?teacher=" + $('#select-teacher').attr('value');
      $(location).attr('href',teacher);
    })
    $('#subject-selector').submit(function(event){
      event.preventDefault();
      var subject = "/courses?subject=" + $('#select-subject').attr('value');
      $(location).attr('href',subject);
    })
  });
</script>