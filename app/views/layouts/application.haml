!!! 5
%html
  %head
    %meta{ :charset => "utf-8" }/
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/
    %title= "Student Assessment Database #{@title || ''}"
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/
    = stylesheet_link_tag 'bootstrap'
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
  %body
    .container
      = partial 'layouts/navigation'
      = yield
      = partial 'layouts/userinfo'
    %script{ :src => "//ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.js" }
      :javascript
        window.jQuery || document.write("<script src='/javascripts/jquery.js'>\x3C/script>")
